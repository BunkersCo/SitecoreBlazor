@using Foundation.BlazorExtensions.Components

@inherits BaseComponent

<div>
    <div class="row">
        <div class="col-md-6">
            <BlazorPlaceholder Name="col-wide-1">
                @ChildContent
            </BlazorPlaceholder>
        </div>
        <div class="col-md-6">
            <BlazorPlaceholder Name="col-wide-2">
                @ChildContent
            </BlazorPlaceholder>
        </div>
    </div>
</div>


@code  {

    [Parameter]
    public RenderFragment ChildContent { get; set; }
   
}

