@using Foundation.BlazorExtensions.Services

@inject RenderActionsService actionsService

<div id="CenterColumn">
  <div id="InnerCenter">
    <div id="Header">
      <img alt="@WelcomeModel.LogoImage.Alt" id="scLogo" src="@WelcomeModel.LogoImage.Src">
    </div>
    <div id="Content">
      <div id="LeftContent">
        <h1 class="contentTitle">@WelcomeModel.Title</h1>
        <div class="contentDescription" id="contentDescription">
          @actionsService.RenderHtml(WelcomeModel.Text, "contentDescription");
        </div>
      </div>
    </div>
    <div id="Footer">
      <hr class="divider">Copyright Sitecore A/S
    </div>
  </div>
</div>


@functions {



public SitecoreBlazorHosted.Shared.Models.WelcomeModel WelcomeModel { get; set; }

public RenderActionsService ActionsService { get; set; }

protected override void OnInit()
{


  WelcomeModel = new SitecoreBlazorHosted.Shared.Models.WelcomeModel()
  {
    Text = "<p>From a single connected platform that also integrates with other customer-facing platforms, to a single view of the customer in a big data marketing repository, to completely eliminating much of the complexity that has previously held marketers back, the latest version of Sitecore makes customer experience highly achievable. Learn how the latest version of Sitecore gives marketers the complete data, integrated tools, and automation capabilities to engage customers throughout an iterative lifecycle \u2013 the technology foundation absolutely necessary to win customers for life.</p><p>For further information, please go to the <a href=\"https://doc.sitecore.net/\" target=\"_blank\" title=\"Sitecore Documentation site\">Sitecore Documentation site</a></p>",
    Title = "Sitecore Experience Platform + BLAZOR",
    LogoImage = new SitecoreBlazorHosted.Shared.Models.ImageField()
    {
      Alt = "Sitecore",
      Src = "_content/SharedComponents/sc_logo.png"

    }

  };


}

protected override void OnAfterRender()
{
  base.OnAfterRender();

  actionsService.RenderHtmlAction();


}







}
