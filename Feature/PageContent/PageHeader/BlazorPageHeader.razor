@using Foundation.BlazorExtensions.Extensions
@using Foundation.BlazorExtensions.Components

@inherits Microsoft.AspNetCore.Components.ComponentBase

<header class="page-header">
    <h1>
        @FieldsModel.PlainText("PageHeaderTitle").Value.HtmlDecode()
    </h1>
</header>

<BlazorPlaceholder Name="main-body">
    @ChildContent
</BlazorPlaceholder>


@functions {

    [Parameter]
    List<SitecoreBlazorHosted.Shared.Models.IBlazorSitecoreField> FieldsModel { get; set; }

    [Parameter]
    protected RenderFragment ChildContent { get; set; }


}
